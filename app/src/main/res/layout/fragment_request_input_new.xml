<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlInput">
        
        <ImageView
            android:id="@+id/ivUnknown"
            style="@style/iv_default"
            android:src="@drawable/ic_unknown_24dp"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:id="@+id/ivCommit"
            style="@style/iv_default"
            android:src="@drawable/ic_commit_24dp"
            android:layout_alignParentRight="true"/>

        <EditText
            style="@style/et_default"
            android:hint="Please enter input"
            android:id="@+id/etInput"
            android:gravity="center"
            android:layout_toRightOf="@id/ivUnknown"
            android:layout_toLeftOf="@id/ivCommit"/>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:padding="8dp"
        android:id="@+id/rvSuggestion"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/rlInput"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>