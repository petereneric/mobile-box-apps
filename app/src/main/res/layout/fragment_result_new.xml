<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlResult"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvHeader"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llReuse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvReuse"
                style="@style/tv_interaction_result_header_exploitation"
                android:background="@drawable/textview_bouncer_result_title_reuse"
                android:text="@string/reuse"
                android:textColor="@color/color_intact_reuse" />

            <LinearLayout
                android:id="@+id/llReuseObjects"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvReuseDevice"
                    style="@style/tv_interaction_result_object_reuse"
                    android:text="@string/device"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvReuseBattery"
                    style="@style/tv_interaction_result_object_reuse"
                    android:text="@string/battery"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvReuseBackcover"
                    style="@style/tv_interaction_result_object_reuse"
                    android:text="@string/backcover"
                    android:visibility="gone" />

                />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRepair"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvRepair"
                style="@style/tv_interaction_result_header_exploitation"
                android:background="@drawable/textview_bouncer_result_title_repair"
                android:text="@string/repair"
                android:textColor="@color/color_defect_reuse" />

            <LinearLayout
                android:id="@+id/llDefectRepairObjects"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvRepairDevice"
                    style="@style/tv_interaction_result_object_repair"
                    android:text="@string/device"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDefectReuse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvDefectReuse"
                style="@style/tv_interaction_result_header_exploitation"
                android:background="@drawable/textview_bouncer_result_title_repair"
                android:text="@string/defect_reuse"
                android:textColor="@color/color_defect_reuse" />

            <LinearLayout
                android:id="@+id/llDefectReuseObjects"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvDefectReuseDevice"
                    style="@style/tv_interaction_result_object_repair"
                    android:text="@string/device"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRecycling"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvRecycling"
                style="@style/tv_interaction_result_header_exploitation"
                android:background="@drawable/textview_bouncer_result_title_recycling"
                android:text="@string/recycling"
                android:textColor="@color/color_recycling" />

            <LinearLayout
                android:id="@+id/llRecyclingObjects"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvRecyclingDevice"
                    style="@style/tv_interaction_result_object_recycling"
                    android:text="@string/device"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvRecyclingBattery"
                    style="@style/tv_interaction_result_object_recycling"
                    android:text="@string/battery"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvRecyclingBackcover"
                    style="@style/tv_interaction_result_object_recycling"
                    android:text="@string/backcover"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llUnknown"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvUnknown"
                style="@style/tv_interaction_result_header_exploitation"
                android:background="@drawable/textview_bouncer_result_title_unknown"
                android:text="@string/unknown_text"
                android:textColor="@color/color_unknown" />

            <LinearLayout
                android:id="@+id/llUnknownObjects"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvUnknownModel"
                    style="@style/tv_interaction_result_object_unknown"
                    android:text="@string/model"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvUnknownExploitation"
                    style="@style/tv_interaction_result_object_unknown"
                    android:text="@string/exploitation"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llInformation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_below="@id/tvHeader">

        <TextView
            android:id="@+id/tvInformation"
            style="@style/tv_interaction_result_header_exploitation"
            android:background="@drawable/textview_bouncer_result_title_unknown"
            android:text="@string/unknown_text"
            android:textColor="@color/color_unknown" />

    </LinearLayout>


    <include
        android:id="@+id/tvHeader"
        layout="@layout/layout_header" />

</RelativeLayout>