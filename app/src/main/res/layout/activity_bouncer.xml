<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <RelativeLayout
        android:id="@+id/rlScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivClearScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_clear_24dp"
            android:layout_alignParentRight="true"
            android:padding="8dp"/>

        <EditText
            style="@style/et_default"
            android:id="@+id/etScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_scan"
            android:layout_toLeftOf="@id/ivClearScan"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/flFragmentDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlScan"/>

    <TableLayout
        android:id="@+id/tlResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TableRow
            android:id="@+id/trCounterRecycling">

            <TextView
                style="@style/tv_tableRow"
                android:text="@string/recycling" />

            <TextView
                style="@style/tv_tableRow"
                android:text="94" />
        </TableRow>

        <TableRow
            android:id="@+id/trCounterReuse">

            <TextView
                style="@style/tv_tableRow"
                android:text="@string/reuse" />

            <TextView
                style="@style/tv_tableRow"
                android:text="30" />
        </TableRow>

        <TableRow
            android:id="@+id/trCounterTotal">

            <TextView
                style="@style/tv_tableRow"
                android:text="@string/total" />

            <TextView
                style="@style/tv_tableRow"
                android:text="124" />
        </TableRow>

    </TableLayout>

    <FrameLayout
        android:id="@+id/flFragmentRequest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/flFragmentDevice"
        android:layout_above="@id/tlResult">
    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:clickable="true"
        android:tint="@color/color_white"
        app:backgroundTint="@color/color_primary"
        app:rippleColor="@color/color_white"
        app:srcCompat="@drawable/ic_add_24dp" />

</RelativeLayout>
