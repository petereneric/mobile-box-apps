<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <include layout="@layout/layout_scan"
        android:id="@+id/lScan"/>

    <FrameLayout
        android:id="@+id/flFragmentDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lScan" />

    <TableLayout
        android:id="@+id/tlResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TableRow android:id="@+id/trCounterRecycling">

            <TextView
                style="@style/tv_tableRow"
                android:text="@string/recycling" />

            <TextView
                android:id="@+id/tvCounterRecycling"
                style="@style/tv_tableRow"
                android:text="94" />
        </TableRow>

        <TableRow android:id="@+id/trCounterReuse">

            <TextView
                style="@style/tv_tableRow"
                android:text="@string/reuse" />

            <TextView
                android:id="@+id/tvCounterReuse"
                style="@style/tv_tableRow"
                android:text="30" />
        </TableRow>

        <TableRow android:id="@+id/trCounterTotal">

            <TextView
                style="@style/tv_tableRow"
                android:text="@string/total" />

            <TextView
                android:id="@+id/tvCounterTotal"
                style="@style/tv_tableRow"
                android:text="124" />
        </TableRow>

    </TableLayout>

    <FrameLayout
        android:id="@+id/flFragmentRequest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tlResult"
        android:layout_below="@id/flFragmentDevice"></FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:clickable="true"
        android:tint="@color/color_white"
        app:backgroundTint="@color/color_primary"
        app:rippleColor="@color/color_white"
        app:srcCompat="@drawable/ic_add_24dp" />

</RelativeLayout>
