<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:id="@+id/llButtons"
        android:layout_alignParentRight="true">

        <Button
            style="@style/button_default"
            android:id="@+id/bStart"
            android:text="@string/start"
            />

        <Button
            style="@style/button_default"
            android:id="@+id/bBack"
            android:text="@string/back"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_toLeftOf="@id/llButtons">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/et_default"
            android:id="@+id/etCollector"
            android:hint="@string/enter_collector"
            android:layout_alignParentBottom="true"/>

        <com.example.ericschumacher.bouncer.Views.RecyclerView_Eric
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvCollector"
            android:layout_above="@id/etCollector"
            />

    </RelativeLayout>

</RelativeLayout>