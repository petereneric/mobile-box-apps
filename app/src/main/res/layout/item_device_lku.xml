<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivDelete"
        android:src="@drawable/ic_clear_24dp"
        android:tint="@color/color_primary"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/ivDelete">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvLKU"
            style="@style/tv_default"
            android:text="LKU: 139"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDevice"
            style="@style/tv_default"
            android:text="Device: 139"
            android:layout_below="@id/tvLKU"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvPosition"
            style="@style/tv_default"
            android:text="Position"
            android:layout_below="@id/tvDevice"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvRpd"
            style="@style/tv_default"
            android:text="Rpd"
            android:layout_below="@id/tvPosition"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvBattery"
            style="@style/tv_default"
            android:text="Battery"
            android:layout_below="@id/tvRpd"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvCharger"
            style="@style/tv_default"
            android:text="Charger"
            android:layout_below="@id/tvBattery"
            android:gravity="center_vertical"/>



    </RelativeLayout>


</RelativeLayout>