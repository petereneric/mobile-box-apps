<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/height_layout_menu"
    android:gravity="center_vertical"
    android:background="@color/color_transparent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            style="@style/image_view_menu"
            android:src="@drawable/ic_printer_24dp"
            android:tint="@color/color_primary"
            android:id="@+id/ivPrint"
            android:padding="8dp"/>

        <ImageView
            style="@style/image_view_menu"
            android:src="@drawable/ic_email_24dp"
            android:tint="@color/color_primary"
            android:id="@+id/ivMail"
            android:visibility="gone"
            android:padding="8dp"/>

        <View
            style="@style/view_menu_divider"
            android:id="@+id/vDividerOne"
            android:visibility="gone"/>

        <ImageView
            style="@style/image_view_menu"
            android:src="@drawable/ic_add_24dp"
            android:tint="@color/color_primary"
            android:id="@+id/ivAdd"
            android:padding="8dp"/>

        <ImageView
            style="@style/image_view_menu"
            android:src="@drawable/ic_pause_white_24dp"
            android:tint="@color/color_primary"
            android:id="@+id/ivPause"
            android:padding="8dp"/>

        <View
            style="@style/view_menu_divider"
            android:id="@+id/vDividerTwo"
            android:visibility="gone"/>

        <ImageView
            style="@style/image_view_menu"
            android:src="@drawable/ic_done_white_24dp"
            android:tint="@color/color_primary"
            android:id="@+id/ivDone"
            android:padding="8dp"/>

        <ImageView
            style="@style/image_view_menu"
            android:src="@drawable/ic_unlink_24"
            android:tint="@color/color_primary"
            android:id="@+id/ivUnlink"
            android:padding="8dp"
            android:visibility="gone"/>

        <ImageView
            style="@style/image_view_menu"
            android:src="@drawable/ic_clear_24dp"
            android:tint="@color/color_primary"
            android:id="@+id/ivClear"
            android:padding="8dp"/>

        <View
            style="@style/view_menu_divider"
            android:id="@+id/vDividerThree"
            android:visibility="gone"/>

        <ImageView
            style="@style/image_view_menu"
            android:src="@drawable/ic_delete_white_24dp"
            android:tint="@color/color_primary"
            android:id="@+id/ivDelete"
            android:padding="8dp"/>

    </LinearLayout>



</LinearLayout>