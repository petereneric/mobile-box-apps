<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/tv_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:id="@+id/tvTitle"
        android:text="@string/recycling"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/textview_bouncer_result_title_recycling"
        android:textColor="@color/color_recycling"
        android:textSize="40sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tvMain"
        style="@style/tv_default"
        android:gravity="center"
        android:textSize="30sp"
        android:text="Device \n (incl. Battery and Backcover)"/>

</LinearLayout>

