<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_secondary</item>
    </style>

    <style name="tv_default">
        <item name="android:textSize">@dimen/size_text_default</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="et_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text_default</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="tv_tableRow" parent="tv_default">
        <item name="android:padding">8dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="tv_itemRow" parent="tv_default">
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    // Button
    <style name="button_default">
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/design_button_default</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/size_text_default</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    // ImageView
    <style name="imageview_delete">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">16dp</item>
        <!-- <item name="app:android:srcCompat">@drawable/ic_clear_24dp</item> -->
    </style>

</resources>
