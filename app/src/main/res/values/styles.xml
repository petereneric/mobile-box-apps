<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_black</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="colorControlNormal">@color/color_white</item>

    </style>

    <style name="tv_default">
        <item name="android:textSize">@dimen/size_text_default</item>
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <style name="et_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text_default</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textColorHint">@color/color_text_tertiary</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="tv_tableRow" parent="tv_default">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tv_tableRow_Key" parent="tv_tableRow">
        <item name="android:layout_weight">7</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_tableRow_Key_Small" parent="tv_tableRow_Key">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tv_tableRow_Value" parent="tv_tableRow">
        <item name="android:layout_weight">4</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">@color/color_text_secondary</item>
    </style>

    <style name="tv_tableRow_Value_Small" parent="tv_tableRow_Value">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tv_itemRow" parent="tv_default">
        <item name="android:textSize">@dimen/size_text_item</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/item_height_default</item>
        <item name="android:gravity">center_vertical</item>
    </style>



    <style name="tv_navigationDrawer" parent="tv_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="tv_itemSwipe">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height_default</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/size_text_default</item>
    </style>

    <style name="tv_interaction_result_header_exploitation" parent="tv_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_text_default</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="tv_interaction_result_object" parent="tv_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_text_default</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="tv_interaction_result_object_reuse" parent="tv_interaction_result_object">
        <item name="android:background">@drawable/textview_bouncer_result_title_reuse_light</item>
    </style>

    <style name="tv_interaction_result_object_repair" parent="tv_interaction_result_object">
        <item name="android:background">@drawable/textview_bouncer_result_title_repair_light</item>
    </style>

    <style name="tv_interaction_result_object_recycling" parent="tv_interaction_result_object">
        <item name="android:background">@drawable/textview_bouncer_result_title_recycling_light</item>
    </style>

    <style name="tv_interaction_result_object_unknown" parent="tv_interaction_result_object">
        <item name="android:background">@drawable/textview_bouncer_result_title_unknown_light</item>
    </style>


    // Button

    <style name="button_main" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_solid_round_color_primary</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/size_text_default</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="colorButtonNormal">@color/color_white</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="button_main_new" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_solid_round_color_primary</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/size_text_button</item>
        <item name="android:gravity">center</item>
        <item name="colorButtonNormal">@color/color_white</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="button_sub_new" parent="button_main_new">
        <item name="android:background">@drawable/background_stroke_round_color_primary</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="button_sub_error" parent="button_sub_new">
        <item name="android:background">@drawable/background_rounded_corners_negative</item>
        <item name="android:textColor">@color/color_choice_negative</item>
    </style>

    <style name="button_sub" parent="button_main">
        <item name="android:background">@drawable/background_stroke_round_color_primary</item>
    </style>

    <style name="button_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_stroke_round_color_primary</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">@dimen/size_text_button</item>
        <item name="android:gravity">center</item>
        <item name="colorButtonNormal">@color/color_white</item>
        <item name="android:layout_margin">8dp</item>

    </style>

    <style name="button_commit">
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_commit</item>
        <item name="android:textColor">@color/color_button_text_commit</item>
        <item name="android:textSize">@dimen/size_text_default</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:drawableRight">@drawable/button_image_commit</item>
        <item name="android:text">@string/commit</item>
    </style>

    <style name="button_select">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">@dimen/size_text_button_select</item>
        <item name="android:textAllCaps">true</item>
    </style>

    // ImageView

    <style name="iv_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:tint">@color/color_text_secondary</item>
        <!-- <item name="app:android:srcCompat">@drawable/ic_clear_24dp</item> -->
    </style>

    <style name="imageview_delete">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">16dp</item>
        <!-- <item name="app:android:srcCompat">@drawable/ic_clear_24dp</item> -->
    </style>

    // Footer

    <style name="tv_footer_print">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/background_rounded_corners_grey_secondary</item>
        <item name="android:textSize">@dimen/size_text_footer</item>
        <item name="android:textColor">@color/color_text_secondary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
    </style>


    // Juicer

    <style name="tv_juicer_settings">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/background_rounded_corners_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_text_tertiary</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
